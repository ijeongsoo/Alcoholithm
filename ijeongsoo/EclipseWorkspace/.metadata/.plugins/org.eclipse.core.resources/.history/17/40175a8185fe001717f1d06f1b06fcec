package Day003SingleLinkedList;

public class SingleList {
	Node head;
	int count;
	
	public SingleList() {
		head=null;
		count=0;
	}
	
	public void insert(int value, int position){
		if(position<1 || this.count+1<position){
			System.out.println("out of bounds");
		}else{
			Node node = new Node();
			if(position==1){
				node.next=this.head;
				this.head=node;
			}else{
				Node temp = this.head;
				for(int i=1; i<position-1; i++){
					temp = temp.next;
				}
				node.next=temp.next;
				temp.next=node;
			}
			this.count++;
		}
		
		
	}
	
	
}
